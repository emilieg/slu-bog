<div class="container">
  <div class="row">
    <div class="col-md-8">
    <h1>Creatures</h1>
  </div>
</div>

<div class="row">
<div class="col-md-8">

  <% @creatures.each do |creature| %>
  <h4> <%= creature.name %></h4>



  <p><%= creature.description %> </p>
   <%=  link_to 'Delete',  { action: :destroy, id: creature.id }, method: :delete, class: "btn btn-danger" %>
  
   <%=  link_to 'Edit',  { action: :edit, id: creature.id }, class: "btn btn-success" %>

   <i class="glyphicon glyphicon-pencil"></i>



  <% end %>
</div>
</div>
</div>